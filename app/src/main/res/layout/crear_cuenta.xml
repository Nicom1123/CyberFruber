<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE6B6B"
    android:backgroundTint="#DE6B6B"
    android:foregroundTint="#E4A3A3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="639dp"
        android:background="#FBFAFA"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="92dp">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="none"
            android:shadowColor="#0D0C0C"
            android:text="CREAR CUENTA"
            android:textColor="#050505"
            android:textSize="24sp"
            android:translationY="-170dp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            android:textColor="#090909"
            android:textSize="20sp"
            android:translationY="-140dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu nombre completo"
            android:textColor="#737171"
            android:textSize="16sp"
            android:translationY="-130dp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CORREO"
            android:textColor="#0D0D0D"
            android:textSize="20sp"
            android:translationY="-100dp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ingresa tu correo electronico"
            android:textColor="#737171"
            android:textSize="16sp"
            android:translationY="-90dp" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NÚMERO"
            android:textColor="#0F0E0E"
            android:textSize="20sp"
            android:translationY="-60dp" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu nùmero telèfonico"
            android:textSize="16sp"
            android:translationY="-50dp" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textColor="#101010"
            android:textSize="20sp"
            android:translationY="-20dp" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese una contraseña(Minimo 8 caracteres) "
            android:textSize="16sp"
            android:translationY="-10dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B1A1A"
            android:backgroundTint="#0D0C0C"
            android:drawableTint="#0D0C0C"
            android:foregroundTint="@color/black"
            android:shadowColor="#161515"
            android:text="REGISTRARME"
            android:textColor="#F3F1F6"
            android:textColorHighlight="#141414"
            android:textColorHint="#1D1D1D"
            android:textColorLink="#141313"
            android:translationY="90dp"
            app:iconTint="#141313"
            app:rippleColor="#141414"
            app:strokeColor="#1B1B1B" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="73dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteY="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
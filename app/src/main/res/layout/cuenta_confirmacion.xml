<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE6B6B">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="249dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="482dp">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="¡Has sido registrado correctamente!!"
            android:textColor="#FDF9F9"
            android:textSize="20sp"
            android:translationY="-60dp" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicia sesion ahora mismo para ingresar a CyberFruver"
            android:textColor="#F8F5F5"
            android:translationX="30dp"
            android:translationY="-40dp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0F0E0E"
            android:text="Iniciar sesión"
            android:textColor="#F6F2F2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="310dp"
        android:layout_height="380dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/caca"
        tools:layout_editor_absoluteY="79dp" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="68dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DE6B6B"
    android:foregroundTint="#DE6B6B">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="28dp" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="411dp"
        android:layout_height="215dp"
        app:srcCompat="@drawable/recuperarcontrasena"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="100dp" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="385dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="346dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:fontFamily="@font/merriweathersans_bold"
            android:gravity="center"
            android:text="Recuperar Contraseña"
            android:textColor="#000000"
            android:textSize="26sp"
            android:translationY="-40dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_bold"
            android:gravity="center"
            android:text="Ingresa el código que hemos enviado a tu correo electrónico y podrás cambiar tu contraseña."
            android:textColor="#000000"
            android:textSize="12sp"
            android:translationY="-20dp" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/merriweathersans_bold"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="text"
                android:text="1"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextText7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/merriweathersans_bold"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="text"
                android:text="2"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextText10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/merriweathersans_bold"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="text"
                android:text="3"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextText11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/merriweathersans_bold"
                android:gravity="center_horizontal|center_vertical"
                android:inputType="text"
                android:text="4"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button16"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Confirmar codigo de recuperacion"
            android:textColor="#FFFFFF"
            android:translationY="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>